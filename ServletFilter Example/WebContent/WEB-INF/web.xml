<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC '-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN' 'http://java.sun.com/dtd/web-app_2_3.dtd'>

<web-app>

    <display-name>My Filter Example</display-name>

	<filter>
        <filter-name>MappingName</filter-name>
        <filter-class>com.hcl.MyFilter</filter-class>  
   </filter>

    <filter-mapping>
      <filter-name>MappingName</filter-name>
       <servlet-name>MappingName</servlet-name>
    </filter-mapping>
	
	<servlet>
		<servlet-name>MappingName</servlet-name>
		<servlet-class>com.hcl.LoginServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>MappingName</servlet-name>
		<url-pattern>/Login.do</url-pattern>
	</servlet-mapping>

</web-app>